{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore.Database": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.Routing": "Information",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleWare": "Warning"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss.ff"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Tips": "Data Source=|DataDirectory|tips.sqlite",
    "TipsOnTemp": "Data Source=d:\\Temp\\tips.sqlite",
    "Tips_Relative": "Data Source=|DataDirectory|tips.sqlite"
  }
}